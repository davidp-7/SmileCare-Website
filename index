  <!-- Minimal JS: mobile menu + current year -->
  <script>
    document.getElementById('burger').addEventListener('click', function(){
      const m = document.getElementById('mobileMenu');
      m.style.display = (m.style.display === 'none' || !m.style.display) ? 'grid' : 'none';
    });
    document.getElementById('year').textContent = new Date().getFullYear();

    // Smooth anchor scroll (nice touch)
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const id = a.getAttribute('href').slice(1);
        const el = document.getElementById(id);
        if(el){
          e.preventDefault();
          el.scrollIntoView({behavior:'smooth', block:'start'});
          // close mobile menu after tap
          const m = document.getElementById('mobileMenu');
          if(getComputedStyle(document.getElementById('burger')).display !== 'none'){
            m.style.display = 'none';
          }
        }
      });
    });
  </script>
